  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.flow.1.2.auto.js"></script>
  <script type="text/javascript">
    $(function(){
      $("#slider_nav").jFlow({
        slides: "#cu3er-container",  // the div where all your sliding divs are nested in
        controller: ".jFlowControl", // must be class, use . sign
        slideWrapper : "#jFlowSlide", // must be id, use # sign
        selectedWrapper: "jFlowSelected",  // just pure text, no sign
        auto: true,
        width: "100%",  // this is the width for the content-slider
        height: "275px",  // this is the height for the content-slider
        pauseTime: 6000, // time between slide transitions (pauses at slide)
        duration: 1500,  // time in miliseconds to transition one slide
        prev: ".jFlowPrev", // must be class, use . sign
        next: ".jFlowNext" // must be class, use . sign
      });
    });
  </script>
</head>
